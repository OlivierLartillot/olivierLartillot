                                <div class="resume-button mt-10 mb-30">
                                    <a class="btn-main" href="{{ realisation.siteLink }}" target="blank">Voir le site web</a>
                                </div>
                            </div>
                            {% endif %}




                                <section class="row">

                                    <aside class="col-lg-4">
                                        <table  class="table">
                                            <tr>
                                                <th scope="row">Type</th>
                                                <td>{{ realisation.typeOfWork }}</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Pays</th>
                                                <td>{{ realisation.country }}</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">Stack</th>
                                                <td>
                                                    {% for key, stack in realisation.stack %}
                                                        {{ stack }} 
                                                        {% if (key + 1) < (realisation.stack|length) %}, {% endif %}

                                                    {% endfor %}
                                                
                                                </td>
                                            </tr>
                                        </table>

                                    </aside>
                                    <article class="col-lg-8">
                                    
                                        {{ realisation.content|raw}}
                                    
                                    </article>
                                
                                </section>


                            </div>
