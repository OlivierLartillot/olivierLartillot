{% extends 'base.html.twig' %}

{% block title %}Réalisation{% endblock %}

{% block body %}

            <!--Main Start-->
            <div id="main" class="site-main">

                <div class="blog-page">
                    <div class="blog-image">
                        <div id="carouselExampleRide" class="carousel slide" data-bs-ride="true">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="{{asset('img/realisations/full/'~realisation.fullImage)}}" class="d-block w-100" alt="{{realisation.title}}">
                                </div>
                                {% for realisation in realisation.imagesSlider %}
                                    <div class="carousel-item">
                                        <img src="{{asset('img/realisations/full/'~realisation.image)}}" class="d-block w-100" alt="{{realisation.title}}">
                                    </div>
                                {% endfor %}
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleRide" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleRide" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>

                        {# <img src="{{asset('img/blog/blog-page-img.jpg')}}" alt=""> #}
                        {# 1920 x 700 #}
                        {# <img src="{{asset('img/realisations/full/'~realisation.fullImage)}}" alt="{{ realisation.title }}"> #}
                    </div>
                    <div class="blog-container">
                        <div class="row">

                            <!--Blog Heading Start-->
                            <div class="blog-heading col-md-8 offset-md-2">
                                <span class="cat">{{ realisation.subtitle }}</span>
                                <h1>{{ realisation.title }}</h1>
                                <span class="blog-date">{{ realisation.date }}</span>
                            </div>
                            <!--Blog Heading Start-->                   

                            <!--Blog Content Start-->
                            <div class="blog-content col-md-10 offset-md-1">

                                {% if realisation.isonline  %}
                                <div class="row justify-content-center ">
                                    <div class="resume-button mt-5 mb-30">
                                        <a class="btn-main" href="{{ realisation.siteLink }}" target="blank">Voir le site web</a>
                                    </div>
                                </div>
                                {% endif %}

                                

                                <section class="row mt-30 py-5 px-3 justify-content-center bg-white  border rounded shadow">
                                    <article class="col-lg-12">
                                        {{ realisation.content|raw}}
                                    </article>
                                    <div class="col-12">
                                        <hr>
                                    </div>
                                    <div class="mt-40 mb-30 text-center">
                                        <h2>Coté Technique</h2>
                                        
                                    </div>
                                    
                                    <div class="table-responsive">
                                        <table  class="table">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th scope="col">Type</th>
                                                    <th scope="col">Pays</th>
                                                    <th scope="col">Stack</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>{{ realisation.typeOfWork }}</td>
                                                    <td>{{ realisation.country }}</td>
                                                    <td>
                                                        {% for key, stack in realisation.stack %}
                                                            {{ stack }} 
                                                        {% if (key + 1) < (realisation.stack|length) %}, {% endif %}
                                                    {% endfor %}
                                                    
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>


                                    
                                        <article class="col-lg-12">
                                            <div class="card p-3 text-lg-center">
                                                {{ realisation.technicalContent|raw }}
                                            </div>
                                        </article>




                                    <div class="mt-40 text-center"> 
                                        <a class="btn bg-secondary text-white shadow mx-2" href="{{ path('app_realisation_detail', {'id': listId[precedent]})}}">
                                        <i class="lnr lnr-arrow-left"></i> Précédent
                                        </a> 
                                        <a class="btn bg-secondary text-white shadow mx-2" href="{{ path('app_realisation_detail', {'id': listId[suivant]})}}">
                                        Suivant <i class="lnr lnr-arrow-right"></i>
                                        </a> 
                                    </div>

                                
                                </section>
                            </div>
                            <!--Blog Content End-->
                                    

                            

                        </div>
                    </div>
                </div>

            </div>

        



    <!--Jquery JS-->
    <script src="{{asset('js/jquery.min.js')}}"></script>
    <!--Plugins JS-->
    <script src="{{asset('js/plugins.min.js')}}"></script>
    <!--Google Map Api-->
    <script src="https://maps.google.com/maps/api/js?sensor=false"></script>
    <!--Site Main JS-->
    <script src="{{asset('js/main.js')}}"></script>

{% endblock body %}